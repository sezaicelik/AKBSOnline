@model MvcCms.Models.MainPage
@{
    ViewBag.Title = "Yeni Kayit";
    Layout = "~/Areas/Admin/Views/Post/_PostLayout.cshtml";
}


@Html.Partial("_recordForm", Model.Record)

@using (Html.BeginForm("CreateXml", "Home", FormMethod.Post, new { id = "CreateXml" }))
{
    @Html.AntiForgeryToken()
    <h1>Kayitlar</h1>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Class</th>
        </tr>
        @foreach (var Records in Model.RecordList)
        {
            @Html.Partial("_renderRecord", Records)
        }

    </table>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-3">
            <input type="submit" value="AKBS için Dosya Oluştur" class="btn btn-default" />
        </div>
    </div>
}

